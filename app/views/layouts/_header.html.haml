-if notice 
  #notice_wrapper
    %p.notice= notice
-elsif alert
  #notice_wrapper
    %p.alert= alert
%div.head
  = link_to "News Blog" ,posts_path ,:class =>"btn btn-link sitename"
  %ul.nav.navbar-nav.position
    -Category.all.each do |c| 
      %li= link_to c.name, posts_path(c)

      
  .head_bottons
    -if user_signed_in?
      .btn-group
        %button.btn.btn-default.dropdown-toggle{type: "button", "data-toggle"=> "dropdown","aria-expanded"=>"false"}
          = current_user.username  
          %span.caret
        %ul.dropdown-menu{:role=>"menu"}
          %li= link_to 'New Post',new_post_path,:class => 'btn btn-link'
          %li=link_to 'Edit account',edit_user_registration_path,:class => 'btn btn-link'
          %li= link_to 'Admin','/admin/login',:class=>'btn btn-link'
    
    -if user_signed_in?
      = link_to 'Sing Out', destroy_user_session_path, method: 'delete',:class=>"btn btn-default "
    -else
      = link_to 'New Post', new_post_path,:class=>"new_post_botton"
      = link_to 'Sing In', new_user_session_path, method: 'post',:class=>"btn btn-primary "

